{% extends '@GlobalcomDoorman/layout.html.twig' %}

{% block title %}{{ 'edit_entrance'|trans({}, 'admin') }} - {{ entrance.fullName }} - {{ parent() }}{% endblock %}

{% block body %}
    <h1>{{ 'edit_entrance'|trans({}, 'admin') }} - {{ entrance.fullName }}</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn btn-primary" type="submit"><i class="fa fa-edit"></i> {{ 'Edit'|trans({}, 'admin') }}
        </button>
    </p>
    {{ form_end(edit_form) }}

    <div class="btn-group record_actions">
        <a class="btn btn-info" href="{{ path('admin_entrance') }}">
            <i class="fa fa-list"></i> {{ 'Back to the list'|trans({}, 'admin') }}
        </a>
    </div>
{% endblock %}

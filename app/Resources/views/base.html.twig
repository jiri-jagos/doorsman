<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>{% block title 'mainTitle'|trans({}, 'admin') %}</title>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        {% stylesheets 'bundles/globalcomdoorman/css/*' %}
        <link href="{{ asset_url }}" rel="stylesheet">
        {% endstylesheets %}
    {% endblock %}
</head>
<body>
{% if app.user %}
    {% block nav %}
        <nav class="navbar navbar-default" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse"
                            data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Brand</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-home"></span> {{ 'nav.house.dropdown' | trans({}, 'admin') }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ url('admin_house') }}">{{ 'nav.house.index' | trans({}, 'admin') }}</a></li>
                                <li><a href="{{ url('admin_house_new') }}">{{ 'nav.house.new' | trans({}, 'admin') }}</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-phone"></span> {{ 'nav.entrance.dropdown' | trans({}, 'admin') }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ url('admin_entrance') }}">{{ 'nav.entrance.index' | trans({}, 'admin') }}</a></li>
                                <li><a href="{{ url('admin_entrance_new') }}">{{ 'nav.entrance.new' | trans({}, 'admin') }}</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="fa fa-cubes"></span> {{ 'nav.keyGroup.dropdown' | trans({}, 'admin') }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ url('admin_keyGroup') }}">{{ 'nav.keyGroup.index' | trans({}, 'admin') }}</a></li>
                                <li><a href="{{ url('admin_keyGroup_new') }}">{{ 'nav.keyGroup.new' | trans({}, 'admin') }}</a></li>
                                {#<li class="divider"></li>#}
                                {#<li><a href="#">Separated link</a></li>#}
                                {#<li class="divider"></li>#}
                                {#<li><a href="#">One more separated link</a></li>#}
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="fa fa-key"></span> {{ 'nav.key.dropdown' | trans({}, 'admin') }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="">{{ 'nav.key.index' | trans({}, 'admin') }}</a></li>
                                <li><a href="#">{{ 'nav.key.new' | trans({}, 'admin') }}</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                                <li class="divider"></li>
                                <li><a href="#">One more separated link</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#">{{ 'logout' |trans({}, 'admin')}}</a></li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    {% endblock %}
{% endif %}
<div class="container">
    {% block body '' %}
</div>
{% block javascripts %}
    <script src="{{ asset('/js/jquery-2.1.1.js') }}"></script>
    {% javascripts 'bundles/globalcomdoorman/js/*' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
